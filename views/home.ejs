<html>

<head>
    <title>

        <%= tittle %>

    </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <link rel="stylesheet" href="css/styles.css">
</head>
<script src=" https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

<body>
    <h1 class="head">TODO App</h1>
    <section class="container">
        <form action="/create-task" method="POST">
            <table class="table-striped">
                <thead class="thead-dark">
                    <tr class="table-active">
                        <th>Add Task</th>
                        <th>Category</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td> <input type="text" name="description" placeholder="Add your task" required
                                style="width: 200px;"></input></th>
                        <td><input type="text" list="cars" style="width: 160px;" name="category" />
                            <datalist id="cars">
                                <option>Personal</option>
                                <option>Office-Work</option>
                                <option>College</option>
                                <option>Other</option>
                            </datalist></th>
                        <td> <input type="date" name="date" required></th>
                        <td><input type="submit" class="btn btn-success" id="add" style="font-size: 15px;"
                                value="Add Task"></th>
                    </tr>
                </tbody>

            </table>

        </form>


    </section>
    <div>
        <h1 style="text-align: center; margin-top: 10px;">Tasks List</h1>

        <form action="/delete-task" method="GET">
            <table class=" table-bordered ">
                <thead>
                    <tr>
                        <th>Select</th>
                        <th>Task</th>
                        <th>Category</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <% for(let i of task) { %>
                    <tr>
                        <td> <input type="checkbox" name="<%= i._id %>"></td>
                        <td>
                            <p id="task-description">
                                <%= i.description %>
                        </td>
                        <td>
                            <p id="task-category"></p>
                            <%= i.category %>
                        </td>
                        <td>
                            <p id="due-date">
                                <%= i.date %>
                            </p>
                        </td>
                    </tr>


                    <% } %>
            </table>
            <div><input type="submit" class="btn btn-danger" style="margin-top: 30px; font-size:12; margin-left:50%"
                    value="Delete Task">
            </div>>
        </form>
    </div>
</body>

</html>